{% extends 'base.html.twig' %}

{% block title %}Meal Planner{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4 mb-3">Your Meal Plans</h1>
            <p class="lead">Organize your meals and plan ahead for a healthier lifestyle.</p>
        </div>
        <div class="col-auto d-flex align-items-center">
            <a href="{{ path('app_meal_planner_new') }}" class="btn btn-primary">
                <i class="fas fa-plus-circle me-2"></i>Create New Plan
            </a>
        </div>
    </div>

    {% if meal_planners is empty %}
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle me-2"></i>You haven't created any meal plans yet. Start planning your meals now!
        </div>
    {% else %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for meal_planner in meal_planners %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Plan for {{ meal_planner.chosenDate ? meal_planner.chosenDate|date('F j, Y') : 'Unspecified Date' }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Last Updated: {{ meal_planner.updateDate ? meal_planner.updateDate|date('M j, Y, g:i a') : 'Never' }}</h6>
                            <div class="meal-list mt-3">
                                {% if meal_planner.getMealChosen is empty %}
                                    <p class="text-muted"><i class="fas fa-utensils me-2"></i>No meals planned</p>
                                {% else %}
                                    <ul class="list-unstyled">
                                        {% for item in meal_planner.getMealChosen %}
                                            <li><i class="fas fa-check-circle me-2 text-success"></i>{{ item.getName }}</li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <a href="{{ path('app_meal_planner_show', {'id': meal_planner.id}) }}" class="btn btn-sm btn-outline-primary me-2">
                                <i class="fas fa-eye me-1"></i>View
                            </a>
                            <a href="{{ path('app_meal_planner_edit', {'id': meal_planner.id}) }}" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-edit me-1"></i>Edit
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .card {
            transition: transform 0.2s ease-in-out;
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .meal-list {
            max-height: 150px;
            overflow-y: auto;
        }
    </style>
{% endblock %}