{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recipe.name }}</td>
            </tr>
            <tr>
                <th>Ingredients</th>
                <td>{{ recipe.ingredients }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recipe.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ recipe.photo }}</td>
            </tr>
            <tr>
                <th>Cooking_time</th>
                <td>{{ recipe.cookingTime }}</td>
            </tr>
            <tr>
                <th>Preparation_time</th>
                <td>{{ recipe.preparationTime }}</td>
            </tr>
            <tr>
                <th>Calories</th>
                <td>{{ recipe.calories }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ recipe.link }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ recipe.type }}</td>
            </tr>
            {# <tr>
                <th>Date_added</th>
                <td>{{ recipe.dateAdded ? recipe.dateAdded|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_updated</th>
                <td>{{ recipe.dateUpdated ? recipe.dateUpdated|date('Y-m-d H:i:s') : '' }}</td>
            </tr> #}
        </tbody>
    </table>

    
    {% if is_granted("ROLE_ADMIN") and recipe.status == '1' %}
    <a href="{{ path('app_recipe_index') }}">back to list</a>
    <a href="{{ path('admin_app_recipe_edit', {'id': recipe.id}) }}">edit</a>
    {{ include('recipe/_delete_form.html.twig') }}

    {% elseif recipe.status == '0'  %}
    <a href="{{ path('admin_app_pending') }}">back to list</a>
    <a href="{{ path('admin_app_recipe_edit', {'id': recipe.id}) }}">edit</a>
    <a href="{{ path('admin_app_approve', {'id': recipe.id}) }}">Approve</a>
    {{ include('recipe/_delete_form.html.twig') }}

    {% elseif userId == recipe.author.id %}
    <a href="{{ path('app_recipe_index') }}">back to list</a>
    <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">edit</a>
    {{ include('recipe/_delete_form.html.twig') }}
    {% else %}
    <a href="{{ path('app_recipe_index') }}">back to list</a>
    {% endif %}

{% endblock %}
